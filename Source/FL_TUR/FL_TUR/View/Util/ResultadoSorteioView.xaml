            <Label ClassId="09" Grid.Column="3" Grid.Row="1" Text="{Binding numeros[8]}" Style="{StaticResource ControlLabelResultadoLotoFacil}" /> 
            <Label ClassId="10" Grid.Column="4" Grid.Row="1" Text="{Binding numeros[9]}" Style="{StaticResource ControlLabelResultadoLotoFacil}" /> 

            <Label ClassId="11" Grid.Column="0" Grid.Row="2" Text="{Binding numeros[10]}" Style="{StaticResource ControlLabelResultadoLotoFacil}" /> 
